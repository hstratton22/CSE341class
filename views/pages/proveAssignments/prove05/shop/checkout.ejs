<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/prove03/css/cart.css">
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>
            <main>
                <ul class="cart__item-list"></ul>
                <% products.forEach(p=> { %>
                    <li class="cart__item">
                        <h1>
                            <%= p.productId.title %>
                        </h1>
                        <h2>Quantity: <%= p.quantity %>
                        </h2>
                    </li>
                    <% }) %>
                        </ul>
                        <div>
                            <h2 class="centered">Total: <%= totalSum %></h2>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>